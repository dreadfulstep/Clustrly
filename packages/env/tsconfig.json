{
  "compilerOptions": {
    "target": "ES2021",  // Target ES Modules
    "module": "ESNext",  // Use ES modules in compiled output
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true
  },
  "include": ["src"]
}
